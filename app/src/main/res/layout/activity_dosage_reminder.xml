<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".DosageReminder">

    <ImageView
        android:id="@+id/imgReminder"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/img_reminder"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgReminder"
        android:text="Our reminders ring exactly when you \n    need them. Set a Reminder now"
        android:textSize="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:background="@drawable/rounded_button"
            android:text="Add a reminder"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="-4dp"
            android:textSize="@dimen/_11sdp"
            android:textColor="#FAFAFA"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/imgAddReminder"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:tint="#F44336"/>

    </LinearLayout>

</RelativeLayout>